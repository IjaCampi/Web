{% extends 'baseback.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-header">
            <h1>Equipement index</h1>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Photo</th>
                    <th>Marque</th>
                    <th>Categorie</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for equipement in equipements %}
                    <tr>
                        <td>{{ equipement.id }}</td>
                        <td>{{ equipement.nom }}</td>
                        <td>{{ equipement.description }}</td>
                        <td>{{ equipement.photo }}</td>
                        <td>{{ equipement.marque }}</td>
                        <td>{{ equipement.categorie }}</td>
                        <td>{{ equipement.prix }}</td>
                        <td>
                            <a href="{{ path('app_equipement_show', {'id': equipement.id}) }}">show</a>
                            <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
            </ul>
        </div>
    </div>

    <a href="{{ path('app_equipement_new') }}">Create new</a>

    <!--ff-->
