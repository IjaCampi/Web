{% extends 'baseback.html.twig' %}

{% block title %}les Evenements {% endblock %}

{% block body %}
    <h1>Les Evenements</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name Event</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Number of Reservation</th>
                <th>Price</th>
                <th>Activities</th>
                <th>details</th>
                <th>edit</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>

                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.dateDebut }}</td>
                <td>{{ evenement.dateFin }}</td>
                <td>{{ evenement.nbrReservation }}</td>
                <td>{{ evenement.prix }}</td>
                <td>{{ evenement.activite }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idEvent': evenement.idEvent}) }}">details</a>
                </td>
                <td>
                    <a href="{{ path('app_evenement_edit', {'idEvent': evenement.idEvent}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">
    <button data-bs-dismiss="modal" type="submit"
            class="btn btn-primary">Create new</button>
        </a>
{% endblock %}
